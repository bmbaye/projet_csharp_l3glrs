@using gestion_commandes.Models
@model PanierProduit
@{
}

<link href="/css/site.css" rel="stylesheet" />


<div class="p-4 bg-white m-auto border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700" style="width:60%; display:flex; flex-direction:column;">
    <div class="w-full">
        <div class="mx-auto" style="width: 500px; height: auto; padding: 3px;">
            <img class="h-auto max-w-full rounded-lg" src="https://flowbite.s3.amazonaws.com/docs/gallery/featured/image.jpg" alt="">
        </div>
        <div class="m-auto" style="width: 90%; height:200px; padding: 5px; display: flex; justify-content:space-around;">
            <div style="width: 200px; height:100px">
                <img class="h-auto max-w-full rounded-lg" src="https://flowbite.s3.amazonaws.com/docs/gallery/square/image-1.jpg" alt="">
            </div>
            <div style="width: 200px; height:100px;">
                <img class="h-auto max-w-full rounded-lg" src="https://flowbite.s3.amazonaws.com/docs/gallery/square/image-2.jpg" alt="">
            </div>
            <div style="width: 200px; height:100px;">
                <img class="h-auto max-w-full rounded-lg" src="https://flowbite.s3.amazonaws.com/docs/gallery/square/image-3.jpg" alt="">
            </div>
        </div>
    </div>
    <form class="w-full mx-auto" style="display:flex; justify-self: flex-end; flex-direction:column;">
        <div class="mb-2 w-full">
            <input type="number" asp-for="Quantite" class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light" placeholder="Quantite" required />
        </div>
        <div style="display:flex; justify-content: space-between">
            <a class="delete-from-panier w-52 place-content-end text-white focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center " style="background-color: red">Enlever du panier</a>
            <button type="submit" class="ajouter-panier bg-blue-500 text-white px-2 py-1 text-xs rounded-md hover:bg-blue-600" style="font-size: 16px; font-weight:400; width: 180px; display:flex; justify-content: space-around; align-items:center; background-color: rgb(101 163 13 / var(--tw-bg-opacity, 1));">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 3h2l.4 2M7 13h10l4-8H5.4m-.4 8a1 1 0 100 2h12a1 1 0 100-2H7zm-2 5a1 1 0 100-2 1 1 0 000 2zm14 0a1 1 0 100-2 1 1 0 000 2z" />
                </svg>
                Ajouter au panier
            </button>
        </div>
    </form>
</div>
